@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" disabled />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" disabled />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input list="Input.Gender" class="form-control" disabled />
                <datalist id="Input.Gender">
                        <option value="0">Male</option>
                        <option value="1">Female</option>
                </datalist>
                <label asp-for="Input.Gender"></label>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FootHeight" class="form-control" disabled />
                <label asp-for="Input.FootHeight">Height in ft</label>
                <span asp-validation-for="Input.FootHeight" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.InchHeight" class="form-control" disabled />
                <label asp-for="Input.InchHeight">Height in in</label>
                <span asp-validation-for="Input.InchHeight" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Weight" class="form-control" disabled />
                <label asp-for="Input.Weight"></label>
                <span asp-validation-for="Input.Weight" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input list="Input.FitnessId" class="form-control" disabled />
                <datalist id="Input.FitnessId">
                        <option value="0">General fitness</option>
                        <option value="1">Strength training</option>
                        <option value="2">Muscle tone</option>
                        <option value="3">Bodybuilding</option>
                        <option value="4">Powerlifting</option>
                </datalist>
                <label asp-for="Input.FitnessId">Fitness goal</label>
                <span asp-validation-for="Input.FitnessId" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
