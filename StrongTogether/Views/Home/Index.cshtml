@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<header>
    <style>
  
        body {
            background: url(gymbanner.png) no-repeat, url(bg.png) repeat;
            background-size: contain, auto;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .pos {
            padding: 250px 0;
            margin-left: -170px;
        }

        .button {
          border-radius: 4px;
          background-color: white;
          border: none;
          color: black;
          text-align: center;
          font-size: 16px;
          padding: 15px 32px;
          display: inline-block;
          width: 170px;
          transition: all 0.5s;
          cursor: pointer;
          margin: 5px;
        }
        .button span {
          cursor: pointer;
          display: inline-block;
          position: relative;
          transition: 0.5s;
        }

        .button span:after {
          content: '\00bb';
          position: absolute;
          opacity: 0;
          top: 0;
          right: -20px;
          transition: 0.5s;
        }

        .button:hover span {
          padding-right: 25px;
        }

        .button:hover span:after {
          opacity: 1;
          right: 0;
        }

        h1, h2, h3, h4, h5, h6 {
          font-family: 'Leelawadee UI';
          color: white;
        }

        h1 {
          font-weight: bold;
        }

        .pic {
          display: block;
          padding-top: 100px;
          position: relative;
        }

        .pic2 {
          float: right;
          display: block;
          padding-top: 100px;
          position: relative;
        }

        .p2 {
          clear: right;
          text-align: right;
        }

        a {
            color: black;
        }
    </style>

</header>
@if (!SignInManager.IsSignedIn(User))
{
    <body>
      <div class="pos">
        <h1 style="font-size:2.25vw;">Welcome to Strong Together</h1>
        <h5 style="font-size:1.5vw;">Sign up for free today</h5>
        <a class="button" asp-area="Identity" asp-page="/Account/Register"><span>Get started</span></a> <br />
        &nbsp<a asp-area="Identity" asp-page="/Account/Login">Or if you have an account, click here to login</a>
      </div>  
    </body>
    <img class="pic" src="~/gym-structure.png" alt="gym" width="500" height="366">
    <p>Whatever your goal, let’s get there together.</p>
    <img class="pic2" src="~/exercise.jpg" alt="exercise" width="500" height="366">
    <p class="p2">Come to workout with us!</p>
}
else
{
    <body>
      <div class="pos">
        <h1>Welcome back @User.Identity?.Name!</h1>
        <h5>Check out your profile:</h5>
        <a class="button" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><span>Profile</span></a>
      </div>  
    </body>

    <img class="pic" src="~/gym-structure.png" alt="gym" width="500" height="366">
    <p>Whatever your goal, let’s get there together.</p>
    <img class="pic2" src="~/exercise.jpg" alt="exercise" width="500" height="366">
    <p class="p2">Come to workout with us!</p>
}

